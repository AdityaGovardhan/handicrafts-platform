{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
 
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], // TODO: what does this do?
        // Common bug in react community . recommend solution is to disable it.
        // https://stackoverflow.com/questions/44437203/how-do-i-resolve-eslint-import-no-named-as-default
        "import/no-named-as-default": 0                                 

     
    }
}