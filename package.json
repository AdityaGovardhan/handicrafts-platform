{
  "name": "handicrafts-platform",
  "version": "0.0.1",
  "author": "Aditya Govardhan, Vasishta Harekal",
  "dependencies": {
    "@material-ui/core": "^4.10.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.8",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.1.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "lint": "npx eslint . --max-warnings 0",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:web": "react-scripts start",
    "start:server": "nodemon src/server.js",
    "start:db": "docker run --rm -d  -p 27017:27017/tcp mongo:4.2.7",
    "start": "npm-run-all --parallel start:db start:server start:web",
    "docker": "docker build --tag app . && docker run --rm -it -p 3000:3000/tcp -p 3001:3001/tcp app"
  },
  "proxy": "http://localhost:3001",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
